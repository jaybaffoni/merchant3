<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fastScrollThumbDrawable">@drawable/my_thumb</item>
    </style>

    <style name="AppTheme.AllButtons">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="AppTheme.HeaderButton" parent="AppTheme.AllButtons">
        <item name="android:background">@drawable/header_button</item>
        <item name="android:textColor">@drawable/tan_button_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.EntryButton" parent="AppTheme.AllButtons">
        <item name="android:background">@drawable/plain_button</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.AllButtons">
        <item name="android:background">@drawable/plain_button</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="AppTheme.EntryLayout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.EntryText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.LabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AdjustLabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.EntryBox" parent="@android:style/Widget.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AdjustText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.AdjustBox" parent="@android:style/Widget.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/clear</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
